<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th colspan="7"><h1>Listing Authors</h1></th>
    </tr>
    <tr>
      <td>Image</td>
        <td>Name</td>
        <td>Email</td>
        <td>Bio</td>
        <td>Show</td>
        <td>Edit</td>
        <td>Destroy</td>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= image_path author.image %></td>
        <td><%= author.name %></td>
        <td><%= author.email %></td>
        <td><%= author.bio %></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
